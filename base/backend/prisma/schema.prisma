generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-1.1.x", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(uuid())
  name        String
  description String?
  price       Decimal  @db.Decimal(10, 2)
  image_url   String?
  store_name  String
  created_at  DateTime @default(now())

  @@unique([name, store_name], name: "name_store_name")
  @@map("products")
}
