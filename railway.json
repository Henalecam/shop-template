{
  "$schema": "https://railway.app/railway.schema.json",
  "services": [
    {
      "name": "backend",
      "rootDirectory": "base/backend",
      "build": {
        "builder": "NIXPACKS"
      },
      "envs": {
        "PORT": "4000"
      },
      "startCommand": "npm start",
      "healthcheckPath": "/health"
    },
    {
      "name": "frontend",
      "rootDirectory": "base/templates/frontend-template",
      "build": {
        "builder": "NIXPACKS"
      },
      "envs": {
        "PORT": "3000"
      },
      "startCommand": "npm start"
    },
    {
      "name": "admin-frontend",
      "rootDirectory": "base/admin-frontend",
      "build": {
        "builder": "NIXPACKS"
      },
      "envs": {
        "PORT": "3001",
        "NEXT_PUBLIC_API_URL": "${{ RAILWAY_PRIVATE_DOMAIN ? `https://$RAILWAY_PRIVATE_DOMAIN` : `https://<backend>.railway.app` }}/api"
      },
      "startCommand": "npm start"
    }
  ]
}